{
  "compilerOptions": {
    "target": "es5", // Specify ECMAScript target version
    "lib": ["dom", "dom.iterable", "esnext"], // Necessary for modern DOM APIs
    "allowJs": true, // Allow JavaScript files
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "noEmit": true, // Prevent emitting compiled files
    "esModuleInterop": true, // Support ES module imports
    "module": "esnext", // Set module system to ESNext
    "moduleResolution": "bundler", // Optimize for modern bundlers like Webpack/Vite
    "resolveJsonModule": true, // Allow importing JSON files
    "isolatedModules": true, // Ensure each file can be transpiled in isolation
    "jsx": "preserve", // Preserve JSX in the output
    "incremental": true, // Enable incremental compilation
    "baseUrl": ".", // Base directory to resolve non-relative module names
    "paths": {
      "@/*": ["./*"] // Alias for root directory
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"], // Include TypeScript files
  "exclude": ["node_modules"] // Exclude node_modules directory
}