{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"], // Necessary for modern DOM APIs
    "allowJs": true, // Allow JavaScript files
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "noEmit": true, // Prevent emitting compiled files
    "esModuleInterop": true, // Support ES module imports
    "module": "esnext", // Set module system to ESNext
    "moduleResolution": "bundler", // Optimize for modern bundlers like Webpack/Vite
    "resolveJsonModule": true, // Allow importing JSON files
    "isolatedModules": true, // Ensure each file can be transpiled in isolation
    "jsx": "preserve", // Preserve JSX in the output
    "incremental": true, // Enable incremental compilation
    "plugins": [
      {
        "name": "next" // Use Next.js-specific TypeScript plugin
      }
    ],
    "paths": {
      "@/*": ["./*"] // Alias for importing files
    },
    "baseUrl": "." // Set the base directory for relative paths
  },
  "include": [
    "next-env.d.ts", // Required by Next.js
    "**/*.ts", // Include TypeScript files
    "**/*.tsx", // Include React TypeScript files
    ".next/types/**/*.ts" // Include types generated by Next.js
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    ".next", // Exclude the Next.js build directory
    "out" // Exclude the Next.js export directory (if used)
  ]
}
